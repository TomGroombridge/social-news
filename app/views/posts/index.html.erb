<% @posts.each do |post| %>
	<h1><%= link_to post.title, post_path(post) %></h1>
	<h2>Created <%= time_ago_in_words post.created_at %> ago</h2>
	<p><%= truncate post.content, length: 140 %></p>

	<% if post.user == current_user %>
		<%= link_to 'Edit this post', edit_post_path(post) %>
		<%= link_to 'Delete this post', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %> 
	<% end %>
<% end %>
	
